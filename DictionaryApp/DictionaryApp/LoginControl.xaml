<Window x:Class="DictionaryApp.LoginControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="350"
        Background="#F0F0F0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Username:" VerticalAlignment="Center" Grid.Row="0"/>
        <TextBox x:Name="usernameTextBox" Grid.Row="0" Margin="100,0,0,0" Height="25" HorizontalAlignment="Left" Width="188"/>

        <TextBlock Text="Password:" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,0,0"/>
        <PasswordBox x:Name="passwordBox" Grid.Row="2" Margin="100,0,0,0" Height="25" HorizontalAlignment="Left" Width="188"/>

        <Button Content="Login" Grid.Row="4" Margin="0,20,0,0" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Login_Click"
                Background="LightSteelBlue" Foreground="White" RenderTransformOrigin="0.088,0.571"/>
    </Grid>
</Window>
